import java.util.*;

// Classe Jogador
class Jogador {
    private String nome;
    private int tentativas;
    private int pontuacao;

    public Jogador(String nome) {
        this.nome = nome;
        this.tentativas = 0;
        this.pontuacao = 0;
    }

    public String getNome() {
        return nome;
    }

    public int getTentativas() {
        return tentativas;
    }

    public int getPontuacao() {
        return pontuacao;
    }

    public void incrementarTentativas() {
        tentativas++;
    }

    public void atualizarPontuacao(int valor) {
        pontuacao += valor;
    }
}

// Classe Placar
class Placar {
    private ArrayList<Jogador> ranking;

    public Placar() {
        ranking = new ArrayList<>();
    }

    public void adicionarJogador(Jogador j) {
        ranking.add(j);
    }

    public void mostrarRanking() {
        System.out.println("Ranking:");
        ranking.sort((a, b) -> b.getPontuacao() - a.getPontuacao());
        for (Jogador j : ranking) {
            System.out.println(j.getNome() + " - Pontuação: " + j.getPontuacao());
        }
    }
}

// Classe Jogo
class Jogo {
    private Jogador jogador;
    private int numeroSecreto;

    public Jogo(Jogador jogador) {
        this.jogador = jogador;
        Random rand = new Random();
        this.numeroSecreto = rand.nextInt(100) + 1;
    }

    public String jogar(int tentativa) {
        jogador.incrementarTentativas();
        if (tentativa > numeroSecreto) {
            return "menor";
        } else if (tentativa < numeroSecreto) {
            return "maior";
        } else {
            int pontuacao = 100 - jogador.getTentativas() * 10;
            jogador.atualizarPontuacao(Math.max(pontuacao, 0));
            return "acertou";
        }
    }
}

// Classe Main
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Placar placar = new Placar();

        System.out.print("Digite seu nome: ");
        String nome = scanner.nextLine();
        Jogador jogador = new Jogador(nome);
        Jogo jogo = new Jogo(jogador);

        System.out.println("Tente adivinhar o número entre 1 e 100!");
        boolean acertou = false;
        while (!acertou) {
            System.out.print("Digite sua tentativa: ");
            int tentativa = scanner.nextInt();
            String resultado = jogo.jogar(tentativa);
            if (resultado.equals("maior")) {
                System.out.println("O número é maior!");
            } else if (resultado.equals("menor")) {
                System.out.println("O número é menor!");
            } else {
                acertou = true;
                System.out.println("Parabéns! Você acertou o número!");
                System.out.println("Tentativas: " + jogador.getTentativas());
                System.out.println("Pontuação: " + jogador.getPontuacao());
            }
        }

        placar.adicionarJogador(jogador);
        placar.mostrarRanking();
    }
}
